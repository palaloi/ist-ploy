<div class="container">
<%= form_for(@user, :html => {:class => "form-signin"}) do |f| %>
  <% if @user.errors.any? %>
  <div  id="errorExplanation">
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %>:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  </div>
  <% end %>
  <form class="form-signin">
    <h2 class="form-signin-heading">Account | Password</h2>
    <span style="font-size:14px; font-style:oblique;">Change your password.</span><hr>    
    <p>
    <ul class="nav nav-pills">
      <li><a href="profileEdit.html">Profile</a></li>
      <li class="active"><a href="profileEditPassword.html">Password</a></li>
      <li><a href="profileEditBio.html">Bio</a></li>
      <li><a href="profileEditSkill.html">Skill</a></li>
    </ul>   
    </p>      
    <hr>
    
    
    <%= f.password_field :password,:id=>"oldPassword", :placeholder => "New password", :class => "input-block-level"%>
    <%= f.password_field :password_confirmation,:id=>"inputName", :placeholder => "Retype new password", :class => "input-block-level"%>
    <%= hidden_field_tag :target, "edit_password" %>
        <hr>
    <%= f.submit "Update Settings", :class=>"btn btn-large btn-block btn-primary" %>
<hr>   


<%end%>
<hr> 
  <footer><p>&copy; IST, MUT</p></footer>
</div>