<style type="text/css">
  
  .container {
    /*padding-top: 120px;*/
  }
  .sidebar-nav {
    padding: 9px 0;
  }

   .form-signin {
    max-width: 300px;
    padding: 19px 29px 29px;
    margin: 0 auto 20px;
    background-color: #fff;
    border: 1px solid #e5e5e5;
    -webkit-border-radius: 5px;
       -moz-border-radius: 5px;
            border-radius: 5px;
    -webkit-box-shadow: 0 1px 2px rgba(0,0,0,.05);
       -moz-box-shadow: 0 1px 2px rgba(0,0,0,.05);
            box-shadow: 0 1px 2px rgba(0,0,0,.05);
  }
  .form-signin .form-signin-heading,
  .form-signin .checkbox {
    margin-bottom: 10px;
  }
  .form-signin input[type="text"],
  .form-signin input[type="password"] {
    font-size: 16px;
    height: auto;
    margin-bottom: 15px;
    padding: 7px 9px;
  }

</style>

<div class="container">
  <%= form_for @user_session, :as => :user_session, :html => { :class => "form-signin" }, :url => { :action => "create" } do |f| %>
    <h2 class="form-signin-heading">Please sign in</h2>
<div class="alert alert-error">
            <%= render "shared/error_messages", :target => @user_session %>
    </div>
    <%= f.text_field :login , :class => "input-block-level", :placeholder => "Username"%><br />
    <%= f.password_field :password , :class => "input-block-level", :placeholder => "Password"%><br />
    <%= f.label :remember_me do %> 
      <%= f.check_box :remember_me %>
      Remember me
    <%end %>
    <br />
    <%= f.submit "Sign in", :class => "btn btn-large btn-block btn-primary" %>
  <% end %>
</div>

